        <!-- Admin Dashboard -->
        <div class="d-flex flex-column flex-shrink-0 sidebar-wrap">
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link active" aria-current="page">
                        <div class="icon-wrap">
                            <i class="fas fa-home"></i>
                        </div>
                        <span style="color:black" class="text-truncate">Dashboard</span>
                    </a>
                </li>
                <hr>
                <li>
                    <a asp-area="Admin" asp-controller="Article" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fas fa-pen"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Makale Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa fa-list"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Kategori Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Image" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa fa-image"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Medya Yönetimi</span>
                    </a>
                </li>
                <hr />
                <li>
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa fa-users"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Kullanıcılar</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa fa-unlock"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Rol</span>
                    </a>
                </li>
                <hr />
                <li>
                    <a asp-area="Admin" asp-controller="Smpt" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa fa-gear"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Smtp Ayarları</span>
                    </a>
                </li>
                <hr />
                <li>
                    <a asp-area="Admin" asp-controller="Auth" asp-action="Logout" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fas fa-sign-out-alt"></i>
                        </div>
                        <span  data-il8n="Accounts">Çıkış</span>
                    </a>
                </li>
            </ul>
            
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
