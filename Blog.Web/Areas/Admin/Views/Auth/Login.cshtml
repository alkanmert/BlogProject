@{
    Layout = null;
}
@model ViewUserLogin

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blog.Web.styles.css" asp-append-version="true" />
</head>
<body style="background-color:aliceblue">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">

                <div style="margin-left: auto; margin-right: auto; width: 40%;" class="">

                    <form asp-controller="Auth" asp-action="Login" id="formAuthentication" method="post">
                        <div asp-validation-summary="All"></div>
                        
                        <div class="text-center mb-5">
                            <h1 class="display-6">Login</h1>
                        </div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="email" name="email" class="form-control form-control-lg" autofocus/>
                            <label asp-for="Email" for ="Email" class="form-label" for="form1Example13">Email address</label>
                            <span asp-validation-for="Email"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input asp-for = "Password" type="password" id="password" name = "password" class="form-control form-control-lg" />
                            <label class="form-label" for="password">Password</label>
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="d-flex justify-content-around align-items-center mb-4">
                            <!-- Checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                                <label class="form-check-label" for="form1Example3"> Remember me </label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                            <a href="#!">Forgot password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

</body>
</html>

